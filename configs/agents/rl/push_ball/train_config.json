{
    "trainer": {
        "exp_name": "push_ball_ppo",
        "seed": 42,
        "device": "cuda:0",
        "headless": true,
        "iterations": 1000,
        "rollout_steps": 1024,
        "eval_freq": 200,
        "save_freq": 200,
        "use_wandb": false,
        "gym_config": "configs/agents/rl/push_ball/gym_config.json"
    },
    "env": {
        "id": "PushBallRL",
        "cfg": {
            "num_envs": 64,
            "sim_steps_per_control": 4,
            "extensions": {
                "obs_mode": "state",
                "episode_length": 100
            }
        }
    },
    "policy": {
        "name": "actor_critic",
        "actor": {
            "type": "mlp",
            "network_cfg": {
                "hidden_sizes": [256, 256],
                "activation": "relu"
            }
        },
        "critic": {
            "type": "mlp",
            "network_cfg": {
                "hidden_sizes": [256, 256],
                "activation": "relu"
            }
        }
    },
    "algorithm": {
        "name": "ppo",
        "cfg": {
            "learning_rate": 0.0001,
            "n_epochs": 10,
            "batch_size": 8192,
            "gamma": 0.99,
            "gae_lambda": 0.95,
            "clip_coef": 0.2,
            "ent_coef": 0.01,
            "vf_coef": 0.5,
            "max_grad_norm": 0.5
        }
    }
}
